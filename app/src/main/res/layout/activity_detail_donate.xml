<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailDonate.DetailDonateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">
            <ImageView
                android:id="@+id/detailDonate_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/detailDonate_title_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/detail_donation"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/detailDonate_title_page">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="15dp"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:id="@+id/detailDonate_img_donate"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_height="160dp"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/detailDonate_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="@string/title_activity_main"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/detailDonate_tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:text="@string/start_desc"
                    android:letterSpacing="0.05"
                    android:textColor="@color/teal_700"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:contentPadding="10dp"
                    android:layout_marginHorizontal="2dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:cardCornerRadius="50dp"
                                android:layout_margin="2dp"
                                >
                                <ImageView
                                    android:id="@+id/detailDonate_img_account"
                                    android:layout_width="match_parent"
                                    android:scaleType="fitCenter"
                                    android:layout_height="match_parent"/>
                            </com.google.android.material.card.MaterialCardView>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginStart="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/detailDonate_tv_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/app_name"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="@color/teal_700"
                                    android:text="Verified Account"/>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/detailDonate_tv_latest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/example_money"
                            android:layout_marginTop="15dp"
                            android:textSize="22sp"
                            android:textColor="@color/green_one"/>
                        <TextView
                            android:id="@+id/detailDonate_tv_target"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/target_rp300_000_000"
                            android:textSize="15sp"
                            android:textColor="@color/green_two"/>
                        <com.mckrpk.animatedprogressbar.AnimatedProgressBar
                            android:id="@+id/animatedProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="4dp"
                            app:animationDurationInMs="1600"
                            app:animationStyle="wave"
                            app:lineWidth="8dp"
                            app:max="100"
                            app:progress="250"
                            app:progressColor="@color/green_one"
                            app:progressTipColor="@color/sherpa_blue"
                            app:progressTipEnabled="true"
                            app:trackColor="@color/green_two" />
                        <TextView
                            android:id="@+id/detailDonate_tv_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/_3_days_left"
                            android:textColor="@color/teal_700"
                            android:textAlignment="textEnd"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/detailDonate_et_donate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="10dp"
                    android:layout_marginTop="10dp"
                    app:hintEnabled="false"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="?attr/colorOnPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/detailDonate_etx_donate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:hint="enter your donation here"
                        android:textColorHint="@color/black"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/detailDonate_btn_donate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    app:cornerRadius="10dp"
                    android:text="Donate"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>